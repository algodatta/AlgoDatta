# === Database (psycopg v3 dialect) ===
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/algodatta

# === Auth / JWT ===
JWT_SECRET=super-secret-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# === CORS (comma-separated origins) ===
CORS_ORIGINS=http://localhost:3000,https://algodatta.com

# === Auto DB init on startup ===
AUTO_DB_INIT=true

# === Seed Admin ===
ADMIN_EMAIL=admin@algodatta.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_ROLE=admin

TZ=Asia/Kolkata

# Dhan test mode: simulate live orders without hitting API
DHAN_TEST_MODE=true
# Optional HMAC secret for /broker/dhan/postback
DHAN_POSTBACK_SECRET=

# === Notifications ===
NOTIFY_TEST_MODE=true
TELEGRAM_BOT_TOKEN=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@algodatta.com

# === Risk & Idempotency ===
DEFAULT_MAX_SIGNALS_PER_MINUTE=30
IDEMPOTENCY_WINDOW_SEC=120
