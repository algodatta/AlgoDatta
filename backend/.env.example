SECRET_KEY=changeme
ACCESS_TOKEN_EXPIRE_MINUTES=60
DATABASE_URL=sqlite:///./algodatta.db
TZ=Asia/Kolkata

# AWS SES (production email)
AWS_REGION=ap-south-1
SES_FROM_EMAIL=you@yourdomain.com
SES_CONFIG_SET_NAME=algodatta-config
AWS_PROFILE=                    # optional; if empty, uses default provider chain
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Rate limits & retries for email sending
REDIS_URL=
EMAIL_RATE_LIMIT_PER_MINUTE=60
EMAIL_RATE_LIMIT_PER_HOUR=1000
EMAIL_RECIPIENT_LIMIT_PER_HOUR=10
EMAIL_RECIPIENT_LIMIT_PER_DAY=50
EMAIL_MAX_RETRIES=3
EMAIL_BACKOFF_BASE_SECONDS=0.5
EMAIL_BACKOFF_MAX_SECONDS=5.0

# Branding for email templates
BRAND_NAME=AlgoDatta
BRAND_PRIMARY=#111111
BRAND_LOGO_URL=
EMAIL_THEME=dark

# Password reset security
PASSWORD_RESET_TOKEN_TTL_MINUTES=30
PASSWORD_RESET_REQUESTS_PER_HOUR=3
PASSWORD_RESET_GLOBAL_PER_MINUTE=60
